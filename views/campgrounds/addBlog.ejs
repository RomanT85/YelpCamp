<% include ../partials/header %>

<section>
	<div class="row bgcForm">
		<h1 class="text-center">Add blog for the <%=Campground.name%> Campground</h1>
		<div class="inputs">
		<form enctype="multipart/form-data" action="/campgrounds/<%=Campground._id%>/blog" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="title" placeholder="Title" />
			</div>
			<div class="form-group">
				<textarea name="text" rows="6" class="input form-control">
					
				</textarea>
			</div>
			<div class="form-group">
				<input class="form-control" type="file" name="image" />
			</div>
			<div class="form-group">			
				<button type="submit" class="btn btn-lg btn-primary btn-block">Add Blog</button>
			</div>
			<div class="form-group">
				<a class="btn btn-primary btn-lg btn-block" href="/campgrounds">Back to Campgrounds</a>
			</div>
		</div>
	</div>
</section>

<% include ../partials/footer %>