<% include ../partials/header %>

<section>
	<div class="row bgcForm">
		<h1 class="text-center">Create a new campground</h1>
		<div class="inputs">
		<form enctype="multipart/form-data" action="/campgrounds" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="name" placeholder="name">
			</div>
			<div class="form-group">
                <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
            </div>
			<div class="form-group">
				<input class="form-control" type="file" name="image">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="description" placeholder="description">
			</div>
			<div class="form-group">			
				<button class="btn btn-lg btn-primary btn-block">Add</button>
			</div>
			<div class="form-group">
				<a class="btn btn-primary btn-lg btn-block" href="/campgrounds">Back to Campgrounds</a>
			</div>
		</div>
	</div>
</section>

<% include ../partials/footer %>