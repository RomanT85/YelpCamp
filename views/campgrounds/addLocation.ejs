<% include ../partials/header %>

<section>
	<div class="row bgcForm">
		<h1 class="text-center">Add location for the <%=Campground.name%> Campground</h1>
		<div class="inputs">
		<form action="/campgrounds/<%=Campground._id%>/location" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="location" placeholder="Type in Address: Number and street" />
			</div>
			<div class="form-group">			
				<button class="btn btn-lg btn-primary btn-block">Add Location</button>
			</div>
			<div class="form-group">
				<a class="btn btn-primary btn-lg btn-block" href="/campgrounds">Back to Campgrounds</a>
			</div>
		</div>
	</div>
</section>

<% include ../partials/footer %>