<!DOCTYPE html>
<html>
	<head>
		<title>YelpCamp Project</title>
		
		<link rel="stylesheet" href="/font-awesome-4.5.0/css/font-awesome.min.css">
		<link rel="stylesheet" href="/bootstrap-3.3.6-dist/css/bootstrap.min.css">
		<link rel="stylesheet" href="/css/app.css">
	</head>
	
	<body data-spy="scroll" data-target=".navbar" id="page-top">
	<nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
		<div class="container-fluid">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed"  data-toggle="collapse" data-target="#navCollapsed" aria-expanded="false">
					<span class="sr-only">Toggle-navigation</span> Menu <i class="fa fa-chevron-down" aria-hidden="true"></i>
				</button>
				<a class="navbar-brand" href="#page-top"><img class="pull-left" src="/images/logo1.png" /></a>
			</div>
			<div id="navCollapsed" class="collapse navbar-collapse">
				<ul id="MainNav1" class="nav navbar-nav navbar-left">
					<li><a href="/">YelpCamp</a></li>
					<li><a href="/campgrounds">Campgrounds</a></li>
					<form action="/campgrounds" method="GET" class="navbar-form navbar-left">
        				<div class="form-group">
          					<input id="Search" type="text" name="search" class="form-control" placeholder="Search...">
          					<button type="submit" class="btn btn-default"><i class="fa fa-search" aria-hidden="true"></i></button>
        				</div>
      				</form>
				</ul>
				<ul id="MainNav2" class="nav navbar-nav navbar-right">
					<% if(!currentUser){ %>
					<li>
						<form class="navbar-form navbar-right" action="/login" method="POST">
							<div class="form-group">
								<label class="sr-only" for="username">Username: </label>
								<input id="username" class="form-control" type="text" name="username" placeholder="username">
							</div>
							<div class="form-group">
								<input class="form-control" type="password" name="password" placeholder="password">
							</div>
							<button type="submit" id="loginBtn" class="btn btn-info"><i class="fa fa-sign-in" aria-hidden="true"></i> Log in</button>
						</form>
					</li>
					<li id="signInBtn"><a href="/signin"><i class="fa fa-user-plus" aria-hidden="true"></i> Sign up</a></li>
					<% } else { %>
					<li><a href="/profile"><img class="img-circle nav-avatar small-circle" src="<%= currentUser.image %>"> <%= currentUser.username %></a></li>
					<li id="logoutBtn"><a href="/logout"><i class="fa fa-sign-out" aria-hidden="true"></i> Log Out</a></li>
					<% } %>
				</ul>
			</div>
		</div>
	</nav>
	
	<div class="container">
		<header>

			<div class="brand">YelpCamp</div>
			
			<% if(error && error.length > 0) { %>
				<div class="alert alert-danger alert-dismissible fade in" role="alert">
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
            			<span aria-hidden="true">&times;</span>
          			</button>
					<p><%= error %></p>
				</div>
			<% } %>

			<% if(success && success.length > 0) { %>
				<div class="alert alert-success alert-dismissible fade in" role="alert">
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
            			<span aria-hidden="true">&times;</span>
          			</button>
					<p><%= success %></p>
				</div>
			<% } %>
			<div id="Message"></div>
		</header>