<% include ../partials/header %>

<section>
	<div class="row bgcForm">
		<div class="col-md-6 col-md-offset-3">
		<h1>Upload profile picture</h1>
			<form enctype="multipart/form-data" action="/profile/<%= currentUser._id %>" method="POST">
				<div class="form-group">
					<input class="form-control" type="file" name="image" required />
				</div>
				<div class="form-group">
					<button class="btn btn-info btn-block"><i class="fa fa-user-plus" aria-hidden="true"></i> Upload image</button>
				</div>
			</form>
		</div>
	</div>
</section>

<% include ../partials/footer %>